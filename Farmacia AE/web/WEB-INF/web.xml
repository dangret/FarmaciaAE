<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>ittepic.edu.mx.servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProducto</servlet-name>
        <servlet-class>ittepic.edu.mx.servlets.ServletProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUser</servlet-name>
        <servlet-class>ittepic.edu.mx.servlets.ServletUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFiltroProducto</servlet-name>
        <servlet-class>ittepic.edu.mx.servlets.ServletFiltroProducto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUser</servlet-name>
        <url-pattern>/ServletUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProducto</servlet-name>
        <url-pattern>/ServletProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFiltroProducto</servlet-name>
        <url-pattern>/ServletFiltroProducto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
